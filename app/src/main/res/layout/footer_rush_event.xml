<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:id="@+id/footer_rush_fragment_line1"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footer_rush_fragment_followus"
        android:text="@string/follow_us"
        android:layout_below="@+id/footer_rush_fragment_line1"
        android:layout_centerHorizontal="true"
        android:textColor="#000"/>

    <View
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:id="@+id/footer_rush_fragment_line2"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:layout_below="@+id/footer_rush_fragment_followus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footer_rush_fragment_line2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:id="@+id/footer_rush_fragment_facebook"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:id="@+id/footer_rush_fragment_twitter"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:id="@+id/footer_rush_fragment_snapchat"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:id="@+id/footer_rush_fragment_instagram"/>
    </LinearLayout>
</RelativeLayout>