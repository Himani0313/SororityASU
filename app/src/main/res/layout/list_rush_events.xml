<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/list_event_rush_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/list_rush_events_name"
                android:text="text"
                android:textSize="14sp"
                android:layout_weight="0.75"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/list_rush_events_date"
                android:text="text"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="0.25"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/list_rush_event_line1"
            android:layout_below="@+id/list_event_rush_name_layout"
            android:background="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_rush_event_location"
            android:layout_below="@+id/list_rush_event_line1"
            android:text="text"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_rush_event_time"
            android:layout_below="@+id/list_rush_event_location"
            android:text="text"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>